---
import "@picocss/pico";
import { userService } from "@services/userService";

import Layout from "@layouts/Layout.astro";

import UserTable from "@components/UserTable.svelte";
import UserFilter from "@components/UserFilter.svelte";
import Overview from "@components/Overview.vue";
import Counter from "@components/Counter";
import Highlight from "@components/Highlight.astro";

//fetch data
const users = await userService.fetchUsers();

const title = "Multi-framework app";
const author = "Aleksa Dencic";
const eventName = "3apedia";
---

<Layout title={title} author={author} eventName={eventName}>
  <Highlight vue>
    <Overview client:load />
  </Highlight>

  <Highlight react>
    <Counter client:visible />
  </Highlight>

  <Highlight svelte>
    <UserFilter users={users} client:load />
  </Highlight>

  <Highlight svelte>
    <UserTable users={users} client:load />
  </Highlight>
</Layout>
